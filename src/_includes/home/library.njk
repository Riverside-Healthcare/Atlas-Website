<a title="{{ library.name }}"
   href="{{ library.info }}"
   class="group animate-fade  border rounded-lg shadow p-5 space-y-3 transition-colors hover:border-sky-400 hover:shadow-sky-400">
    <div class="is-size-4">
        <h2 class="text-2xl font-medium transition-colors m-0 text-slate-600 group-hover:text-slate-900 ">
            <span class="mx-2 text-slate-300 group-hover:text-sky-400">/</span>
            {{ library.name }}
        </h2>
    </div>
    <p class="font-light text-slate-600 text-lg border-b">{{ library.short_description }}</p>
    <div class="flex max-md:flex-col">
        <div class="md:w-1/3">
            <figure>
                {% image "./src/static/img/atlas-home.png", "atlas home page", "(max-width:1200px) 80vw, 100vw" , "asdf", "eager", "auto" %}
            </figure>
            <figure>
                {% image "./src/static/img/report_group.png", "atlas information sources", "(max-width:600px) 80vw, 100vw" , "asdf", "eager", "auto" %}
            </figure>
        </div>
        <div class="md:w-2/3 space-y-4 text-slate-700">
            <p class="pt-5">{{ library.description }}</p>
            <p class="">{{ library.long_description | markdown | safe }}</p>
        </div>
    </div>
</a>
