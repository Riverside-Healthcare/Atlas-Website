{% for x in hits %}
    <div class="relative flex cursor-default select-none items-center rounded-sm px-2 py-1.5 text-sm outline-none aria-selected:bg-accent hover:bg-accent aria-selected:text-accent-foreground data-[disabled]:pointer-events-none data-[disabled]:opacity-50 group search-result"
         role="option"
         data-value="{{ x.url }}"
         aria-selected="false"
         data-selected="false">
        <div class="flex-col w-full">
            <div class="flex justify-between w-full">
                <div class="flex space-x-2">
                    <svg xmlns="http://www.w3.org/2000/svg"
                         width="14"
                         height="14"
                         viewBox="0 0 24 24"
                         fill="none"
                         stroke="currentColor"
                         stroke-width="2"
                         stroke-linecap="round"
                         stroke-linejoin="round"
                         class="my-auto">
                        <path d="M8 3H2v15h7c1.7 0 3 1.3 3 3V7c0-2.2-1.8-4-4-4Z" />
                        <path d="m16 12 2 2 4-4" />
                        <path d="M22 6V3h-6c-2.2 0-4 1.8-4 4v14c0-1.7 1.3-3 3-3h7v-2.3" />
                    </svg>
                    <strong>{{ x.title }}</strong>
                </div>
                <div class="flex">
                    {% for tag in x._tags %}
                        <div class="inline-flex items-center rounded-full border px-2.5 py-0.5 text-xs font-semibold transition-colors focus:outline-none focus:ring-2 focus:ring-ring focus:ring-offset-2 border-transparent hover:bg-primary/80 bg-slate-200 group-hover:bg-slate-300 group-hover:cursor-default text-slate-900">
                            {{ tag }}
                        </div>
                    {% endfor %}
                </div>
            </div>
            <div>{{ x._snippetResult.content.value | safe | replace('\n', ' ') | replace("  ", " ") }}</div>
        </div>
    </div>
{% else %}
    <div class="py-6 text-center text-sm" cmdk-empty="" role="presentation">No results found.</div>
{% endfor %}
