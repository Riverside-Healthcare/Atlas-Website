<h2 class="text-slate-900 text-4xl tracking-tight font-extrabold sm:text-5xl dark:text-white text-center py-10">
    What does it look like?
</h2>
{% set images = [
    {
        "url": "./src/static/img/library/gallery/analytics.png",
        "alt": "Site Analytics"
    },
    {
        "url": "./src/static/img/library/gallery/home.png",
        "alt": "Dashboard"
    },
    {
        "url": "./src/static/img/library/gallery/report_runs_user.png",
        "alt": "User's Report Usage"
    },
    {
        "url": "./src/static/img/library/gallery/search.png",
        "alt": "Search"
    },
    {
        "url": "./src/static/img/library/gallery/settings_meta.png",
        "alt": "Meta Tag Settings"
    },
    {
        "url": "./src/static/img/library/gallery/settings_roles.png",
        "alt": "Site Role Settings"
    },
    {
        "url": "./src/static/img/library/gallery/settings_search.png",
        "alt": "Search Settings"
    },
    {
        "url": "./src/static/img/library/gallery/ssrs_report.png",
        "alt": "Example SSRS Report"
    },
    {
        "url": "./src/static/img/library/gallery/user_analytics.png",
        "alt": "User Analytics"
    },
    {
        "url": "./src/static/img/library/gallery/crystal_report.png",
        "alt": "Example Crystal Report"
    },
    {
        "url": "./src/static/img/library/gallery/profile.png",
        "alt": "Example Report Usage Profile"
    }
] %}
<div class="grid grid-cols-1 gap-6 lg:gap-8 md:grid-cols-2 lg:grid-cols-3 max-lg:hidden">
    <ul class="space-y-8">
        {% set group = "1" %}
        {% asyncEach img in images %}
            <li class="text-sm leading-6">{% include 'src/_includes/components/imageSmall.njk' %}</li>
            {% if  loop.index % ((images.length / 3) | round)  == 0 %}
            </ul>
            <ul class="space-y-8">
            {% endif %}
        {% endeach %}
    </ul>
</div>
<div class="grid grid-cols-1 gap-6 lg:gap-8 md:grid-cols-2 lg:grid-cols-2 lg:hidden">
    <ul class="space-y-8">
        {% set group = "2" %}
        {% asyncEach img in images %}
            <li class="text-sm leading-6">{% include 'src/_includes/components/imageSmall.njk' %}</li>
            {% if  loop.index % ((images.length / 2) | round)  == 0 %}
            </ul>
            <ul class="space-y-8">
            {% endif %}
        {% endeach %}
    </ul>
</div>
{% set docsUrl = library.docs %}
{% include 'src/_includes/components/openDocs.njk' %}
