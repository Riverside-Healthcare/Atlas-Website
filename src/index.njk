---
layout: layout.njk
---

{% block body %}
    <div class="hero-body">
        <div class="container">
            <div class="columns is-vcentered">
                <div class="column">
                    <h1>
                        it's called
                        <strong>Atlas</strong>
                    </h1>
                    <p class="subtitle">
                        Analytics solutions for healthcare
                        <br>
                        <br>
                        By healthcare professionals, for healthcare professionals.
                    </p>
                </div>
                <div class="column">
                    {% image "./src/static/img/report_group.png", "atlas information sources", "(min-width:600px) 50vw, 100vw", "asdf", "eager", "auto" %}
                </div>
            </div>
        </div>
    </div>
    <section class="section">
        <div class="container">
            <div class="columns">
                <div class="column">
                    <h2 class="title is-2" id="bi-library">{{ bi_library.name }}</h2>
                    <p class="subtitle mt-1">
                        {{ bi_library.short_description }}
                    </p>
                    <div class="content">
                        <div class="block">
                            {{ bi_library.description }}
                        </div>
                    </div>
                </div>
                <div class="column is-vcentered">
                    <div class="box">
                      <article class="media">
                        <div class="media-left">
                          <figure class="image is-256x256">
                            {% image "./src/static/img/atlas-home.png", "atlas home page", "(min-width:600px) 50vw, 100vw" %}
                          </figure>
                        </div>
                        <div class="media-content">
                          <div class="content">
                            <p>
                              <h3 class="is-3">Find out more!</h3>
                              <br>
                              <a href="/bi-library">Is Atlas BI Library the right tool for me?</a>
                            </p>
                          </div>
                        </div>
                      </article>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section class="section">
        <div class="container">
            <div class="columns">
                <div class="column is-vcentered">
                    <div class="box">
                      <article class="media">
                        <div class="media-left">
                          <figure class="image is-256x256">
                                {% image "./src/static/img/automation-hub/dashboard.png", "atlas home page", "(min-width:600px) 50vw, 100vw" %}
                          </figure>
                        </div>
                        <div class="media-content">
                          <div class="content">
                            <p>
                              <h3 class="is-3">Find out more!</h3>
                              <br>
                              <a href="/automation">Is Atlas Automation Hub the right tool for me?</a>
                            </p>
                          </div>
                        </div>
                      </article>
                    </div>
            </div>
                <div class="column has-text-right">
                 <h2 class="title is-2" id="bi-library">
                {{ automation_hub.name }}
            </h2>
            <p class="subtitle mt-1">
                {{ automation_hub.short_description }}
            </p>
                    <div class="content">
                        <div class="block">
                            {{ automation_hub.description }}
                        </div>
                    </div>
                </div>
            </div>
                </div>
            </div>

    </section>
{% endblock body %}
