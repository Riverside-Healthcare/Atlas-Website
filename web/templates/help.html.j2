{% extends "layout.html.j2" %}
{% block body %}
    <div class="hero-body">
        <div class="container">
            <div class="columns">
                <div class="column is-three-fifths is-offset-one-fifth">
                    <h1 class="mb-3">we can help.</h1>
                    <h4
                        class="mb-5">There is a community of dedicated Atlas users to help you.</h4>
                    <form name="contact" method="POST" data-netlify="true">
                        <div class="columns is-desktop">
                            <div class="column">
                                <div class="field">
                                    <label class="label" for="name">Name</label>
                                    <div class="control">
                                        <input class="input" type="text" name="name" id="name" />
                                    </div>
                                </div>
                            </div>
                            <div class="column">
                                <div class="field">
                                    <label class="label" for="email">Email</label>
                                    <div class="control">
                                        <input class="input" type="text" name="email" id="email" />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="field">
                            <label class="label" for="subject">Subject</label>
                            <div class="control">
                                <input class="input" type="text" name="subject" id="subject" />
                            </div>
                        </div>
                        <div class="field mb-5">
                            <label class="label">Message</label>
                            <div class="control">
                                <textarea
                                    class="textarea"
                                    name="body"
                                    rows="10"
                                    cols="35"></textarea>
                            </div>
                        </div>
                        <div class="field">
                            <div class="control">
                                <button
                                    type="button"
                                    onclick="this.closest('form').submit();this.closest('form').reset();return !1;"
                                    class="button is-info is-fullwidth">Send
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock body %}
